            <script>
                let ws = null;
                let localStream = null;
                let currentUserId = null;
                let currentUsername = null;
                let isAnalyzing = false;
                let frameInterval = null;
                
                // DOMå…ƒç´ 
                const loginSection = document.getElementById('loginSection');
                const mainInterface = document.getElementById('mainInterface');
                const usernameInput = document.getElementById('usernameInput');
                const loginBtn = document.getElementById('loginBtn');
                const logoutBtn = document.getElementById('logoutBtn');
                const startBtn = document.getElementById('startBtn');
                const stopBtn = document.getElementById('stopBtn');
                const localVideo = document.getElementById('localVideo');
                const processedVideo = document.getElementById('processedVideo');
                const cameraError = document.getElementById('cameraError');
                const userInfo = document.getElementById('userInfo');
                const currentUser = document.getElementById('currentUser');
                const connectionStatus = document.getElementById('connectionStatus');
                const debugInfo = document.getElementById('debugInfo');
                
                // ç™»å½•åŠŸèƒ½
                loginBtn.onclick = async function() {
                    const username = usernameInput.value.trim() || null;
                    
                    // éšè—ä¹‹å‰çš„é”™è¯¯ä¿¡æ¯
                    cameraError.classList.add('hidden');
                    loginBtn.disabled = true;
                    loginBtn.textContent = 'æ­£åœ¨è·å–æ‘„åƒå¤´æƒé™...';
                    
                    try {
                        // æ£€æŸ¥æµè§ˆå™¨æ”¯æŒ
                        if (!navigator.mediaDevices || !navigator.mediaDevices.getUserMedia) {
                            throw new Error('æ‚¨çš„æµè§ˆå™¨ä¸æ”¯æŒæ‘„åƒå¤´åŠŸèƒ½ï¼Œè¯·ä½¿ç”¨Chromeã€Firefoxæˆ–Safariç­‰ç°ä»£æµè§ˆå™¨');
                        }
                        
                        // æ£€æŸ¥æ˜¯å¦ä¸ºHTTPSæˆ–localhost
                        const isSecure = location.protocol === 'https:' || 
                                       location.hostname === 'localhost' || 
                                       location.hostname === '127.0.0.1';
                        
                        if (!isSecure) {
                            throw new Error('æ‘„åƒå¤´åŠŸèƒ½éœ€è¦HTTPSè¿æ¥æˆ–localhostè®¿é—®ã€‚è¯·ä½¿ç”¨ https:// æˆ– localhost è®¿é—®');
                        }
                        
                        console.log('æ­£åœ¨è¯·æ±‚æ‘„åƒå¤´æƒé™...');
                        
                        // è¯·æ±‚æ‘„åƒå¤´æƒé™
                        localStream = await navigator.mediaDevices.getUserMedia({ 
                            video: { 
                                width: { ideal: 640 }, 
                                height: { ideal: 480 },
                                facingMode: 'user'  // å‰ç½®æ‘„åƒå¤´
                            }, 
                            audio: false 
                        });
                        
                        console.log('æ‘„åƒå¤´æƒé™è·å–æˆåŠŸ');
                        localVideo.srcObject = localStream;
                        
                        // ç­‰å¾…è§†é¢‘åŠ è½½
                        await new Promise((resolve) => {
                            localVideo.onloadedmetadata = resolve;
                        });
                        
                        console.log('æ‘„åƒå¤´è§†é¢‘æµå·²å‡†å¤‡å°±ç»ª');
                        
                        // åˆ›å»ºç”¨æˆ·ä¼šè¯
                        const response = await fetch('/api/create-session', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({ username: username })
                        });
                        
                        const result = await response.json();
                        if (result.status === 'success') {
                            currentUserId = result.user_id;
                            currentUsername = result.username;
                            
                            // åˆ‡æ¢ç•Œé¢
                            loginSection.classList.add('hidden');
                            mainInterface.classList.remove('hidden');
                            userInfo.style.display = 'block';
                            currentUser.textContent = currentUsername;
                            
                            // è¿æ¥WebSocket
                            connectWebSocket();
                            
                            console.log('ç™»å½•æˆåŠŸ:', result);
                        } else {
                            throw new Error('åˆ›å»ºç”¨æˆ·ä¼šè¯å¤±è´¥: ' + result.message);
                        }
                        
                    } catch (error) {
                        console.error('ç™»å½•å¤±è´¥:', error);
                        
                        // æ˜¾ç¤ºè¯¦ç»†é”™è¯¯ä¿¡æ¯
                        let errorMessage = '<h4>âŒ æ— æ³•è®¿é—®æ‘„åƒå¤´</h4>';
                        
                        if (error.name === 'NotAllowedError') {
                            errorMessage += '<p><strong>åŸå› ï¼š</strong>ç”¨æˆ·æ‹’ç»äº†æ‘„åƒå¤´æƒé™</p>';
                            errorMessage += '<p><strong>è§£å†³æ–¹æ¡ˆï¼š</strong></p>';
                            errorMessage += '<ul>';
                            errorMessage += '<li>ç‚¹å‡»åœ°å€æ å·¦ä¾§çš„æ‘„åƒå¤´å›¾æ ‡</li>';
                            errorMessage += '<li>é€‰æ‹©"å…è®¸"æ‘„åƒå¤´æƒé™</li>';
                            errorMessage += '<li>åˆ·æ–°é¡µé¢é‡è¯•</li>';
                            errorMessage += '</ul>';
                        } else if (error.name === 'NotFoundError') {
                            errorMessage += '<p><strong>åŸå› ï¼š</strong>æœªæ‰¾åˆ°æ‘„åƒå¤´è®¾å¤‡</p>';
                            errorMessage += '<p><strong>è§£å†³æ–¹æ¡ˆï¼š</strong></p>';
                            errorMessage += '<ul>';
                            errorMessage += '<li>æ£€æŸ¥æ‘„åƒå¤´æ˜¯å¦æ­£ç¡®è¿æ¥</li>';
                            errorMessage += '<li>ç¡®ä¿æ‘„åƒå¤´é©±åŠ¨å·²å®‰è£…</li>';
                            errorMessage += '<li>é‡å¯æµè§ˆå™¨é‡è¯•</li>';
                            errorMessage += '</ul>';
                        } else if (error.name === 'NotReadableError') {
                            errorMessage += '<p><strong>åŸå› ï¼š</strong>æ‘„åƒå¤´è¢«å…¶ä»–åº”ç”¨å ç”¨</p>';
                            errorMessage += '<p><strong>è§£å†³æ–¹æ¡ˆï¼š</strong></p>';
                            errorMessage += '<ul>';
                            errorMessage += '<li>å…³é—­å…¶ä»–ä½¿ç”¨æ‘„åƒå¤´çš„åº”ç”¨</li>';
                            errorMessage += '<li>é‡å¯æµè§ˆå™¨</li>';
                            errorMessage += '<li>é‡æ–°å°è¯•</li>';
                            errorMessage += '</ul>';
                        } else if (error.name === 'OverconstrainedError') {
                            errorMessage += '<p><strong>åŸå› ï¼š</strong>æ‘„åƒå¤´ä¸æ”¯æŒè¯·æ±‚çš„åˆ†è¾¨ç‡</p>';
                            errorMessage += '<p><strong>è§£å†³æ–¹æ¡ˆï¼š</strong></p>';
                            errorMessage += '<ul>';
                            errorMessage += '<li>å°è¯•ä½¿ç”¨ä¸åŒçš„æ‘„åƒå¤´</li>';
                            errorMessage += '<li>æ›´æ–°æ‘„åƒå¤´é©±åŠ¨</li>';
                            errorMessage += '<li>è”ç³»æŠ€æœ¯æ”¯æŒ</li>';
                            errorMessage += '</ul>';
                        } else {
                            errorMessage += '<p><strong>é”™è¯¯ä¿¡æ¯ï¼š</strong>' + error.message + '</p>';
                            errorMessage += '<p><strong>é€šç”¨è§£å†³æ–¹æ¡ˆï¼š</strong></p>';
                            errorMessage += '<ul>';
                            errorMessage += '<li>ä½¿ç”¨Chromeã€Firefoxæˆ–Safariæµè§ˆå™¨</li>';
                            errorMessage += '<li>ç¡®ä¿ä½¿ç”¨HTTPSæˆ–localhostè®¿é—®</li>';
                            errorMessage += '<li>æ£€æŸ¥æµè§ˆå™¨æ‘„åƒå¤´æƒé™è®¾ç½®</li>';
                            errorMessage += '<li>é‡å¯æµè§ˆå™¨é‡è¯•</li>';
                            errorMessage += '</ul>';
                        }
                        
                        // æ˜¾ç¤ºé”™è¯¯ä¿¡æ¯
                        cameraError.innerHTML = errorMessage;
                        cameraError.classList.remove('hidden');
                        
                        // å¦‚æœå·²è·å–åˆ°æµï¼Œéœ€è¦é‡Šæ”¾
                        if (localStream) {
                            localStream.getTracks().forEach(track => track.stop());
                            localStream = null;
                        }
                        
                    } finally {
                        loginBtn.disabled = false;
                        loginBtn.textContent = 'å¼€å§‹ä½¿ç”¨';
                    }
                };
                
                // é€€å‡ºç™»å½•
                logoutBtn.onclick = function() {
                    if (isAnalyzing) {
                        stopAnalysis();
                    }
                    
                    if (ws) {
                        ws.close();
                    }
                    
                    if (localStream) {
                        localStream.getTracks().forEach(track => track.stop());
                        localStream = null;
                    }
                    
                    // é‡ç½®çŠ¶æ€
                    currentUserId = null;
                    currentUsername = null;
                    isAnalyzing = false;
                    
                    // åˆ‡æ¢ç•Œé¢
                    mainInterface.classList.add('hidden');
                    loginSection.classList.remove('hidden');
                    userInfo.style.display = 'none';
                    cameraError.classList.add('hidden');
                    usernameInput.value = '';
                    
                    updateConnectionStatus('æœªè¿æ¥', false);
                };
                
                // WebSocketè¿æ¥
                function connectWebSocket() {
                    if (!currentUserId) return;
                    
                    try {
                        // åŠ¨æ€è·å–WebSocketåœ°å€
                        const wsProtocol = location.protocol === 'https:' ? 'wss:' : 'ws:';
                        const wsUrl = `${wsProtocol}//${location.host}/ws/${currentUserId}`;
                        
                        ws = new WebSocket(wsUrl);
                        
                        ws.onopen = function() {
                            console.log('WebSocketè¿æ¥å·²å»ºç«‹');
                            updateConnectionStatus('å·²è¿æ¥', true);
                        };
                        
                        ws.onmessage = function(event) {
                            try {
                                const data = JSON.parse(event.data);
                                console.log('æ”¶åˆ°WebSocketæ¶ˆæ¯:', data.type);
                                
                                if (data.type === 'frame_result') {
                                    // æ˜¾ç¤ºå¤„ç†åçš„å¸§
                                    if (data.frame) {
                                        processedVideo.src = data.frame;
                                        document.getElementById('captureStatus').textContent = 'å·²æ¥æ”¶';
                                        console.log('å¤„ç†åçš„å¸§å·²æ›´æ–°');
                                    }
                                    // æ›´æ–°ç»Ÿè®¡æ•°æ®
                                    if (data.stats) {
                                        updateDashboard(data.stats);
                                    }
                                } else if (data.type === 'stats_update') {
                                    updateDashboard(data.data);
                                }
                                
                            } catch (error) {
                                console.error('è§£æWebSocketæ¶ˆæ¯å¤±è´¥:', error);
                            }
                        };
                        
                        ws.onclose = function() {
                            console.log('WebSocketè¿æ¥å·²å…³é—­');
                            updateConnectionStatus('è¿æ¥æ–­å¼€', false);
                            
                            // è‡ªåŠ¨é‡è¿
                            if (currentUserId) {
                                setTimeout(connectWebSocket, 3000);
                            }
                        };
                        
                        ws.onerror = function(error) {
                            console.error('WebSocketé”™è¯¯:', error);
                            updateConnectionStatus('è¿æ¥é”™è¯¯', false);
                        };
                        
                    } catch (error) {
                        console.error('WebSocketè¿æ¥å¤±è´¥:', error);
                        updateConnectionStatus('è¿æ¥å¤±è´¥', false);
                    }
                }
                
                // å¼€å§‹åˆ†æ
                startBtn.onclick = async function() {
                    if (!currentUserId || isAnalyzing) return;
                    
                    try {
                        const response = await fetch(`/api/start/${currentUserId}`, { method: 'POST' });
                        const result = await response.json();
                        
                        if (result.status === 'success') {
                            isAnalyzing = true;
                            updateButtons();
                            startFrameCapture();
                            console.log('åˆ†æå·²å¼€å§‹');
                        } else {
                            alert('å¯åŠ¨å¤±è´¥: ' + result.message);
                        }
                    } catch (error) {
                        console.error('å¯åŠ¨åˆ†æå¤±è´¥:', error);
                        alert('å¯åŠ¨å¤±è´¥: ' + error.message);
                    }
                };
                
                // åœæ­¢åˆ†æ
                stopBtn.onclick = function() {
                    stopAnalysis();
                };
                
                function stopAnalysis() {
                    if (!currentUserId || !isAnalyzing) return;
                    
                    fetch(`/api/stop/${currentUserId}`, { method: 'POST' })
                        .then(response => response.json())
                        .then(result => {
                            isAnalyzing = false;
                            updateButtons();
                            stopFrameCapture();
                            console.log('åˆ†æå·²åœæ­¢');
                        })
                        .catch(error => {
                            console.error('åœæ­¢åˆ†æå¤±è´¥:', error);
                        });
                }
                
                // å¸§æ•è·
                function startFrameCapture() {
                    if (frameInterval) return;
                    
                    console.log('å¼€å§‹å¸§æ•è·...');
                    document.getElementById('captureStatus').textContent = 'æ­£åœ¨æ•è·';
                    
                    frameInterval = setInterval(() => {
                        if (isAnalyzing && localStream && ws && ws.readyState === WebSocket.OPEN) {
                            captureFrame();
                        } else {
                            console.log('å¸§æ•è·æ¡ä»¶ä¸æ»¡è¶³:', {
                                isAnalyzing: isAnalyzing,
                                hasLocalStream: !!localStream,
                                wsReady: ws && ws.readyState === WebSocket.OPEN
                            });
                        }
                    }, 100); // æ¯100msæ•è·ä¸€å¸§ (10 FPS)
                }
                
                function stopFrameCapture() {
                    if (frameInterval) {
                        clearInterval(frameInterval);
                        frameInterval = null;
                        console.log('å¸§æ•è·å·²åœæ­¢');
                        document.getElementById('captureStatus').textContent = 'å·²åœæ­¢';
                    }
                }
                
                function captureFrame() {
                    try {
                        // æ£€æŸ¥è§†é¢‘æ˜¯å¦å‡†å¤‡å°±ç»ª
                        if (!localVideo.videoWidth || !localVideo.videoHeight) {
                            console.log('è§†é¢‘å°ºå¯¸æœªå‡†å¤‡å°±ç»ª:', localVideo.videoWidth, 'x', localVideo.videoHeight);
                            return;
                        }
                        
                        const canvas = document.createElement('canvas');
                        const ctx = canvas.getContext('2d');
                        
                        canvas.width = localVideo.videoWidth;
                        canvas.height = localVideo.videoHeight;
                        
                        ctx.drawImage(localVideo, 0, 0, canvas.width, canvas.height);
                        const frameData = canvas.toDataURL('image/jpeg', 0.6);
                        
                        // å‘é€å¸§æ•°æ®
                        ws.send(JSON.stringify({
                            type: 'video_frame',
                            frame: frameData
                        }));
                        
                        // æ›´æ–°çŠ¶æ€
                        document.getElementById('captureStatus').textContent = 'æ­£åœ¨å‘é€';
                        console.log('å¸§å·²å‘é€ï¼Œå°ºå¯¸:', canvas.width, 'x', canvas.height);
                        
                    } catch (error) {
                        console.error('æ•è·å¸§å¤±è´¥:', error);
                        document.getElementById('captureStatus').textContent = 'æ•è·å¤±è´¥';
                    }
                }
                
                // æ›´æ–°ç•Œé¢
                function updateButtons() {
                    startBtn.disabled = isAnalyzing;
                    stopBtn.disabled = !isAnalyzing;
                    
                    const status = document.getElementById('status');
                    if (isAnalyzing) {
                        status.textContent = 'è¿è¡Œä¸­';
                        status.className = 'status running';
                    } else {
                        status.textContent = 'å·²åœæ­¢';
                        status.className = 'status stopped';
                    }
                }
                
                function updateConnectionStatus(text, connected) {
                    connectionStatus.textContent = text;
                    connectionStatus.className = `connection-status ${connected ? 'connected' : 'disconnected'}`;
                }
                
                function updateDashboard(data) {
                    const realtime = data.realtime || {};
                    const behavior = data.behavior || {};
                    const ageDistribution = data.age_distribution || {};
                    
                    // æ›´æ–°ç»Ÿè®¡æ•°å­—
                    document.getElementById('totalPeople').textContent = realtime.total_people || 0;
                    document.getElementById('activePeople').textContent = realtime.active_tracks || 0;
                    document.getElementById('avgAge').textContent = realtime.avg_age ? realtime.avg_age.toFixed(1) : '--';
                    document.getElementById('avgDwell').textContent = behavior.avg_dwell_time ? behavior.avg_dwell_time.toFixed(1) + 's' : '0s';
                    document.getElementById('frameCount').textContent = data.frame_count || 0;
                    
                    // æ›´æ–°æ€§åˆ«åˆ†å¸ƒ
                    const maleCount = realtime.male_count || 0;
                    const femaleCount = realtime.female_count || 0;
                    const totalGender = maleCount + femaleCount;
                    
                    document.getElementById('maleCount').textContent = maleCount;
                    document.getElementById('femaleCount').textContent = femaleCount;
                    
                    if (totalGender > 0) {
                        document.getElementById('malePercent').textContent = ((maleCount / totalGender) * 100).toFixed(1) + '%';
                        document.getElementById('femalePercent').textContent = ((femaleCount / totalGender) * 100).toFixed(1) + '%';
                    } else {
                        document.getElementById('malePercent').textContent = '0%';
                        document.getElementById('femalePercent').textContent = '0%';
                    }
                    
                    // æ›´æ–°å¹´é¾„åˆ†å¸ƒ
                    document.getElementById('age0_17').textContent = ageDistribution['0-17'] || 0;
                    document.getElementById('age18_25').textContent = ageDistribution['18-25'] || 0;
                    document.getElementById('age26_35').textContent = ageDistribution['26-35'] || 0;
                    document.getElementById('age36_45').textContent = ageDistribution['36-45'] || 0;
                    document.getElementById('age46_55').textContent = ageDistribution['46-55'] || 0;
                    document.getElementById('age56_65').textContent = ageDistribution['56-65'] || 0;
                    document.getElementById('age65_plus').textContent = ageDistribution['65+'] || 0;
                    
                    // æ›´æ–°è¡Œä¸ºåˆ†æ
                    document.getElementById('shoppers').textContent = behavior.shoppers || 0;
                    document.getElementById('browsers').textContent = behavior.browsers || 0;
                    document.getElementById('engagement').textContent = behavior.avg_engagement_score ? behavior.avg_engagement_score.toFixed(1) : 0;
                    document.getElementById('conversion').textContent = behavior.shopper_rate ? (behavior.shopper_rate * 100).toFixed(1) + '%' : '0%';
                    
                    // æ›´æ–°è°ƒè¯•ä¿¡æ¯
                    const totalAge = Object.values(ageDistribution).reduce((a, b) => a + b, 0);
                    const debugText = 
                        'ç”¨æˆ·: ' + (data.username || 'æœªçŸ¥') + '\\n' +
                        'æœ€åæ›´æ–°: ' + new Date().toLocaleTimeString() + '\\n' +
                        'è¿è¡ŒçŠ¶æ€: ' + (data.is_running ? 'æ˜¯' : 'å¦') + '\\n' +
                        'å¸§æ•°: ' + (data.frame_count || 0) + '\\n' +
                        'æ€»äººæ•°: ' + (realtime.total_people || 0) + '\\n' +
                        'å½“å‰äººæ•°: ' + (realtime.active_tracks || 0) + '\\n' +
                        'å¹´é¾„åˆ†æäººæ•°: ' + totalAge;
                    debugInfo.textContent = debugText;
                }
                
                // å®šæœŸè¯·æ±‚ç»Ÿè®¡æ•°æ®ï¼ˆå¤‡ç”¨æ–¹æ¡ˆï¼‰
                setInterval(() => {
                    if (currentUserId && (!ws || ws.readyState !== WebSocket.OPEN)) {
                        fetch(`/api/realtime-stats/${currentUserId}`)
                            .then(response => response.json())
                            .then(data => updateDashboard(data))
                            .catch(error => console.error('è·å–ç»Ÿè®¡æ•°æ®å¤±è´¥:', error));
                    }
                }, 2000);
                
                // åˆå§‹åŒ–
                updateButtons();
                updateConnectionStatus('æœªè¿æ¥', false);
            </script>
        </body>
        </html>
        """
    
    def run(self, host: str = "localhost", port: int = 8000, use_ssl: bool = True):
        """è¿è¡ŒWebåº”ç”¨"""
        if use_ssl:
            ssl_context = self._setup_ssl_context()
            if ssl_context:
                logger.info(f"å¯åŠ¨HTTPS Webåº”ç”¨: https://{host}:{port}")
                uvicorn.run(
                    self.app, 
                    host=host, 
                    port=port, 
                    ssl_keyfile=str(self.key_file),
                    ssl_certfile=str(self.cert_file)
                )
            else:
                logger.warning("SSLé…ç½®å¤±è´¥ï¼Œå›é€€åˆ°HTTPæ¨¡å¼")
                logger.info(f"å¯åŠ¨HTTP Webåº”ç”¨: http://{host}:{port}")
                uvicorn.run(self.app, host=host, port=port)
        else:
            logger.info(f"å¯åŠ¨HTTP Webåº”ç”¨: http://{host}:{port}")
            uvicorn.run(self.app, host=host, port=port)

def main():
    """ä¸»å‡½æ•°"""
    web_app = WebApp()
    web_app.run()

if __name__ == "__main__":
    main() 